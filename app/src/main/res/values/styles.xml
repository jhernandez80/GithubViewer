<resources>
  <!-- Base application theme. -->
  <style name="Theme.Github" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="preferenceTheme">@style/Theme.Github.PreferenceThemeOverlay</item>
    <item name="colorControlNormal">@color/white</item>
    <item name="toolbarStyle">@style/Widget.Github.Toolbar</item>
  </style>

  <style name="Theme.Github.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
    <item name="android:layout">@layout/fragment_preferences</item>
  </style>

  <style name="Widget.Github.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="titleTextColor">@color/white</item>
    <item name="android:background">@color/primary</item>
    <item name="android:theme">?theme</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>

</resources>