<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_nav_graph"
  app:startDestination="@id/mainFragment">

  <fragment
    android:id="@+id/mainFragment"
    android:name="com.livehappyapps.githubviewer.ui.main.MainFragment"
    android:label="MainFragment">
    <action
      android:id="@+id/to_issueContainer"
      app:destination="@id/issueContainerFragment" />
    <action
      android:id="@+id/to_settings"
      app:destination="@id/settingsFragment" />
  </fragment>
  <fragment
    android:id="@+id/issueContainerFragment"
    android:name="com.livehappyapps.githubviewer.ui.issues.IssueContainerFragment"
    android:label="fragment_issue_container"
    tools:layout="@layout/fragment_issue_container" >
    <argument
      android:name="owner"
      app:argType="string"
      app:nullable="true" />
    <argument
      android:name="repo"
      app:argType="string"
      app:nullable="true" />
  </fragment>
  <fragment
    android:id="@+id/settingsFragment"
    android:name="com.livehappyapps.githubviewer.ui.settings.SettingsFragment"
    android:label="SettingsFragment" />
</navigation>